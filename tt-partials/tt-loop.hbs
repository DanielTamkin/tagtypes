{{#if omit}}
  {{#each posts}}
    {{#has tag=../omit}}
      {{> "loop-default"}}
    {{else}}
      {{! show nothing }}
    {{/has}}
  {{/each}}
{{else if latest}}
  {{#posts.[0]}}
    {{> "tt-loop-settings"}}
  {{/posts.[0]}}
{{else}}
  {{#foreach posts}}
    {{> "tt-loop-settings"}}
  {{/foreach}}
{{/if}}
